{
  "name": "@ckb-ts-script/hello-world",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "start": "ckb-debugger --read-file ../../dist/hello-world.bc --bin ../../deps/ckb-js-vm -- -r",
