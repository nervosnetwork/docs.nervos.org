    "format": "prettier --write .",
    "check:format": "prettier --check .",
    "clean": "echo noclean"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ckb-js-std/bindings": "0.1.0",
    "@ckb-js-std/core": "0.1.0",
    "buffer": "6.0.3"
  }
}
